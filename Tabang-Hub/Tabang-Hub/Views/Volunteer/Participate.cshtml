                 data-end-date="@formattedDateEnd">
                <div class="card custom-card shadow-lg">
                    <div class="row g-0">
                        @{
                            var imgs = Model.detailsEventImage.Where(m => m.eventId == pendingOrg.eventId).Select(m => m.eventImage).FirstOrDefault();
                        }
                        <!-- Image Section -->
                        <div class="col-12 col-md-4">
