@model Tabang_Hub.Utils.Lists

@{
    ViewBag.Title = "Payment Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card mx-auto shadow-lg" style="max-width: 600px;">
        <div class="card-body text-center p-5">
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
            </div>
            <h2 class="card-title fw-bold mb-3">Thank you for your donation!</h2>
            <p class="card-text mb-4">
                Your payment was successful, and we greatly appreciate your support for this event. Your contribution makes a real difference!
            </p>
            <a href="@Url.Action("EventDetails", "Volunteer", new { eventId = Model.CreateEvents.eventId })" class="btn btn-primary btn-lg">
                View Event Details
            </a>
        </div>
    </div>
</div>