<script>
    function applyEvent(eventId) {
        $.ajax({
            url: '@Url.Action("ApplyVolunteer", "Volunteer")',
            type: 'POST',
            data: {
                eventId: eventId
            },
            success: function (response) {
                if (response.success) {
                    console.log("Apply Success");
                } else {
                    console.log("Already apply.");
                }
            },
            error: function (xhr, status, error) {
                console.log("Unsuccess.");
            }
        })
    }
</script>