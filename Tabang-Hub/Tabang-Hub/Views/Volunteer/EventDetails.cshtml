@model Tabang_Hub.Utils.Lists
@{
    ViewBag.Title = "EventDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    .carousel-inner img {
        width: 100%;
        height: 500px; /* Set a fixed height for consistency */
        object-fit: cover;
    }

    .carousel-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .event-description {
        margin-bottom: 20px;
    }

    .event-details {
        margin-top: 20px;
    }

    .org-info h3 {
        margin-top: 10px;
    }

    .skills-required {
        margin-top: 30px;
    }

    .skill-badge {
        margin: 5px 5px 0 0;
    }
</style>

<h2>Event Details</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-12 event-description">
            @foreach (var orgDetails in Model.orgEvents)
            {
                <p>@orgDetails.eventDescription</p>
            }
        </div>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <div id="carouselExampleControls" class="carousel slide carousel-container" data-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.detailsEventImage.Count; i++)
                        {
                            var pic = Model.detailsEventImage[i];
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="~/Content/IdPicture/@pic.eventImage" class="d-block w-100" alt="Event Image">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-4 event-details">

                <div class="skills-required">
                    <h3>Skills Required</h3>
                    @foreach (var rk in Model.detailsSkillRequirement)
                    {
                        <span class="badge badge-secondary skill-badge">
                            @rk.skillName
                        </span>
                    }
                </div>

                <div class="org-info">
                    <h3>Organization Information</h3>
                    @foreach (var o in Model.orgInfos)
                    {
                        <p><strong>Name:</strong> @o.orgName</p>
                        <p><strong>Description:</strong> @o.orgDescription</p>
                        <p><strong>Email:</strong> @o.orgEmail</p>
                        <p><strong>Type:</strong> @o.orgType</p>
                        <p><strong>Phone:</strong> @o.phoneNum</p>
                    }
                </div>

                <div class="apply-button mt-3">
                    @foreach (var orgDetails in Model.orgEvents)
                    {
                        <button onclick="applyEvent('@orgDetails.eventId')" class="btn btn-primary btn-block">
                            Apply now
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<br />

<script>
    function applyEvent(eventId) {
        $.ajax({
            url: '@Url.Action("ApplyVolunteer", "Volunteer")',
            type: 'POST',
            data: {
                eventId: eventId
            },
            success: function (response) {
                if (response.success) {
                    console.log("Apply Success");
                } else {
                    console.log("Already apply.");
                }
            },
            error: function (xhr, status, error) {
                console.log("Unsuccess.");
            }
        })
    }
</script>