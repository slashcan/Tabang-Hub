@{
    ViewBag.Title = "Organization Dashboard";
    Layout = "~/Views/Shared/_Organization.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Organization Dashboard</h2>

    <!-- Overview Cards -->
    <div class="row">
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Events</h5>
                    <p class="card-text fs-4">12</p> <!-- Replace with dynamic count -->
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Active Volunteers</h5>
                    <p class="card-text fs-4">89</p> <!-- Replace with dynamic count -->
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Donations</h5>
                    <p class="card-text fs-4">$3,500</p> <!-- Replace with dynamic total -->
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Pending Requests</h5>
                    <p class="card-text fs-4">5</p> <!-- Replace with dynamic count -->
                </div>
            </div>
        </div>
    </div>

    <!-- Donations Overview Section -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h5>Donations Overview</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2">Recent Donations</p>
                    <ul class="list-group">
                        <li class="list-group-item">John Smith - $500</li>
                        <li class="list-group-item">Alice Johnson - $200</li>
                        <li class="list-group-item">Corporate Partner - $1,500</li>
                        <!-- Repeat for each donation dynamically -->
                    </ul>
                    <button class="btn btn-warning mt-3">View All Donations</button>
                </div>
            </div>
        </div>

        <!-- Pending Volunteer Requests Section -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5>Pending Volunteer Requests</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2">Pending Requests</p>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Sarah Connor
                            <div>
                                <button class="btn btn-sm btn-primary">Approve</button>
                                <button class="btn btn-sm btn-danger">Reject</button>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Mike Ross
                            <div>
                                <button class="btn btn-sm btn-primary">Approve</button>
                                <button class="btn btn-sm btn-danger">Reject</button>
                            </div>
                        </li>
                        <!-- Repeat for each request dynamically -->
                    </ul>
                    <button class="btn btn-danger mt-3">View All Requests</button>
                </div>
            </div>
        </div>
    </div>
</div>
