@model Tabang_Hub.Utils.Lists

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Organization.cshtml";
}

<style>
    .fixed-size-img {
        width: 100%;
        max-height: 450px; /* Set the maximum height you want */
        object-fit: cover; /* Ensure the image covers the area */
    }
</style>

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-10 d-flex align-items-center justify-content-between">
            <h2 class="bg-light p-3 mb-0">TabangHub</h2>
            <div class="rounded-circle bg-secondary" style="width: 50px; height: 50px;"></div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="row">
        <div class="col-md-5">
            <!-- Adjusted the width of the column -->
            <!-- Carousel -->
            <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.detailsEventImage.Count; i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @i"></button>
                    }
                </div>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.detailsEventImage.Count; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@Url.Content("~/Content/IdPicture/" + Model.detailsEventImage[i].eventImage)" class="d-block w-100 img-fluid fixed-size-img border border-primary" alt="Event Image">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <!-- Adjusted the width of the column -->
            <ul class="list-unstyled">
                <li class="mb-2"><i class="bi bi-geo-alt"></i> Sahing Elementary School, Mamburao, Occidental Mindoro</li>
                <li class="mb-2"><i class="bi bi-calendar"></i> Jun 08, 2024</li>
                <li class="mb-2"><i class="bi bi-clock"></i> 08:00 AM - 08:00 AM</li>
                <li class="mb-2"><i class="bi bi-people"></i> We Lift Club</li>
                <li class="mb-2"><i class="bi bi-person"></i> Mary Ann Vale</li>
                <li class="mb-2"><i class="bi bi-telephone"></i> 09775084463</li>
                <li class="mb-2"><i class="bi bi-envelope"></i> dosdosa45@gmail.com</li>
            </ul>
        </div>
    </div>

    <a href="@Url.Action("EventsManagement", "Organization")#event-list" class="btn btn-secondary mt-3">Back to List</a>
</div>
