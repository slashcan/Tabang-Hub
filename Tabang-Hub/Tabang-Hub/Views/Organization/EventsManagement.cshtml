
@{
    ViewBag.Title = "EventsManagement";
    Layout = "~/Views/Shared/_Organization.cshtml";
}

<div class="container mt-5">
    <!-- Overview/Dashboard -->
    <div class="card mb-4">
        <div class="card-header">Dashboard</div>
        <div class="card-body">
            <p>Overview of all programs and events, including key metrics and upcoming events.</p>
        </div>
    </div>

    <!-- Event Creation -->
    <div class="card mb-4">
        <div class="card-header">Event Creation</div>
        <div class="card-body">
            <p>Create new programs and events with detailed information and requirements.</p>
        </div>
    </div>

    <!-- Event List -->
    <div class="card mb-4">
        <div class="card-header">Event List</div>
        <div class="card-body">
            <p>Search, filter, and manage all programs and events, including viewing details and editing information.</p>
        </div>
    </div>

    <!-- Volunteer Assignment -->
    <div class="card mb-4">
        <div class="card-header">Volunteer Assignment</div>
        <div class="card-body">
            <p>Assign volunteers to specific programs and events based on skills and availability.</p>
        </div>
    </div>

    <!-- Scheduling and Calendar -->
    <div class="card mb-4">
        <div class="card-header">Scheduling and Calendar</div>
        <div class="card-body">
            <p>Manage the timeline of programs and events with a calendar view, conflict detection, and reminders.</p>
        </div>
    </div>

    <!-- Communication Tools -->
    <div class="card mb-4">
        <div class="card-header">Communication Tools</div>
        <div class="card-body">
            <p>Facilitate communication between event organizers and volunteers through messaging and email notifications.</p>
        </div>
    </div>

    <!-- Resource Management -->
    <div class="card mb-4">
        <div class="card-header">Resource Management</div>
        <div class="card-body">
            <p>Manage resources needed for programs and events, including materials, supplies, and budget.</p>
        </div>
    </div>

    <!-- Feedback and Evaluation -->
    <div class="card mb-4">
        <div class="card-header">Feedback and Evaluation</div>
        <div class="card-body">
            <p>Collect feedback from participants and evaluate the success of programs and events.</p>
        </div>
    </div>

    <!-- Reports and Analytics -->
    <div class="card mb-4">
        <div class="card-header">Reports and Analytics</div>
        <div class="card-body">
            <p>Generate reports and analyze data related to programs and events, including participation rates and impact assessments.</p>
        </div>
    </div>
</div>

