
@{
    ViewBag.Title = "ReportsManagement";
    Layout = "~/Views/Shared/_Organization.cshtml";
}

<div class="container mt-5">
    <!-- Overview/Dashboard -->
    <div class="card mb-4">
        <div class="card-header">Dashboard</div>
        <div class="card-body">
            <p>Overview of key metrics and recent activity.</p>
        </div>
    </div>

    <!-- Volunteer Reports -->
    <div class="card mb-4">
        <div class="card-header">Volunteer Reports</div>
        <div class="card-body">
            <p>Reports on volunteer participation rates, hours logged, and skill distribution.</p>
        </div>
    </div>

    <!-- Event Reports -->
    <div class="card mb-4">
        <div class="card-header">Event Reports</div>
        <div class="card-body">
            <p>Reports on event participation, feedback, and resource utilization.</p>
        </div>
    </div>

    <!-- Donation Reports -->
    <div class="card mb-4">
        <div class="card-header">Donation Reports</div>
        <div class="card-body">
            <p>Reports on donation totals, donor counts, and campaign performance.</p>
        </div>
    </div>

    <!-- Customizable Reports -->
    <div class="card mb-4">
        <div class="card-header">Customizable Reports</div>
        <div class="card-body">
            <p>Create custom reports with specific criteria, data fields, and visualization options.</p>
        </div>
    </div>

    <!-- Data Visualization -->
    <div class="card mb-4">
        <div class="card-header">Data Visualization</div>
        <div class="card-body">
            <p>Interactive data visualization tools including bar charts, line graphs, pie charts, and heat maps.</p>
        </div>
    </div>

    <!-- Export and Sharing -->
    <div class="card mb-4">
        <div class="card-header">Export and Sharing</div>
        <div class="card-body">
            <p>Options to export reports to CSV, Excel, or PDF, and share via email.</p>
        </div>
    </div>

    <!-- Performance Metrics -->
    <div class="card mb-4">
        <div class="card-header">Performance Metrics</div>
        <div class="card-body">
            <p>Key performance indicators to track the effectiveness of volunteer programs and events.</p>
        </div>
    </div>
</div>

