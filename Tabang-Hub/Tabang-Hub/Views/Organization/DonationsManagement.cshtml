
@{
    ViewBag.Title = "DonationsManagement";
    Layout = "~/Views/Shared/_Organization.cshtml";
}

<div class="container mt-5">
    <!-- Overview/Dashboard -->
    <div class="card mb-4">
        <div class="card-header">Dashboard</div>
        <div class="card-body">
            <p>Overview of donations, including total amount, number of donors, and recent donations.</p>
        </div>
    </div>

    <!-- Donation Recording -->
    <div class="card mb-4">
        <div class="card-header">Donation Recording</div>
        <div class="card-body">
            <p>Record new donations, including donor information, donation amount, and payment method.</p>
        </div>
    </div>

    <!-- Donor Management -->
    <div class="card mb-4">
        <div class="card-header">Donor Management</div>
        <div class="card-body">
            <p>Manage donor information, view profiles, and edit details.</p>
        </div>
    </div>

    <!-- Donation History -->
    <div class="card mb-4">
        <div class="card-header">Donation History</div>
        <div class="card-body">
            <p>View a comprehensive history of all donations, edit records, and export data.</p>
        </div>
    </div>

    <!-- Recurring Donations -->
    <div class="card mb-4">
        <div class="card-header">Recurring Donations</div>
        <div class="card-body">
            <p>Set up and manage recurring donations, including schedules and notifications.</p>
        </div>
    </div>

    <!-- Fundraising Campaigns -->
    <div class="card mb-4">
        <div class="card-header">Fundraising Campaigns</div>
        <div class="card-body">
            <p>Create and manage fundraising campaigns, track progress, and promote via email or social media.</p>
        </div>
    </div>

    <!-- Communication Tools -->
    <div class="card mb-4">
        <div class="card-header">Communication Tools</div>
        <div class="card-body">
            <p>Send thank-you emails, create newsletters, and provide updates to donors.</p>
        </div>
    </div>

    <!-- Reports and Analytics -->
    <div class="card mb-4">
        <div class="card-header">Reports and Analytics</div>
        <div class="card-body">
            <p>Generate reports and analyze donation data, including trends and top donors.</p>
        </div>
    </div>

    <!-- Tax Receipts and Acknowledgements -->
    <div class="card mb-4">
        <div class="card-header">Tax Receipts and Acknowledgements</div>
        <div class="card-body">
            <p>Generate and send tax receipts and acknowledgments to donors.</p>
        </div>
    </div>
</div>

